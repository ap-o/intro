{
  "root": true,
  "extends": [
    "recommended/esnext",
    "recommended/esnext/style-guide",
    "recommended/node",
    "recommended/node/style-guide"
  ],
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [".njk"],
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "import/no-commonjs": 0,
    "import/no-nodejs-modules": 0,
    "camelcase": 0,
    "quotes": 0,
    "no-console": 1,
    "no-var": 1,
    "no-unused-vars": 1,
    "semi": [
      1,
      "always"
    ],
    "key-spacing": ["error", {
      "singleLine": {
        "beforeColon": true,
        "afterColon": true
      },
      "multiLine": {
        "beforeColon": true,
        "afterColon": true,
        "align": "colon"
      }
    }],
    "comma-dangle": 0,
    "indent": ["error", 2],
    "no-trailing-spaces": 0,
    "eol-last": 0,
    "no-underscore-dangle": 0,
    no-multiple-empty-lines: [
      "error", { "max": 1, "maxEOF": 1 }
    ],
    "no-alert": 0,
    "no-lone-blocks": 0
  },
  "globals": {}
}
